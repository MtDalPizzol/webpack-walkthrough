<div class="task">
  <div class="task__content">
    <span>{{ title }}</span>
  </div>
  <div class="task_actions">
    <button class="btn btn-default task__btn--edit" type="button" value="{{ id }}">
      <i class="fas fa-pen"></i>
    </button>
    <button class="btn btn-default task__btn--delete" type="button" value="{{ id }}">
      <i class="fas fa-trash"></i>
    </button>
  </div>
</div>
